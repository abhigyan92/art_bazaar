<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<h1 class="col-md-6 col-md-offset-3 text-center">All Products</h1>
<div class="table-responsive col-md-6 col-md-offset-3">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>description</th>
      <th colspan="3">image</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td colspan="3"><%= image_tag(product.image.url,
        class:"img-circle",height:'100px',width:'100px') %></td>
        <td><%=product.price%></td>
        <td><%= link_to 'Edit', edit_product_path(product),class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>