<h1>Cash on delivery orders</h1>
<table>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>phone</th>
      <th>Email</th>
      <th colspan="3">Delivery Address</th>
      <th>orders</th>
      <th>Time</th>
      <th>subtotal</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.phone %></td>
        <td><%=customer.email%></td>
        <td colspan="3"><%= customer.address %></td>
        <%id=customer.order_id%>
        <td>
        	<%if !id.nil?%>
        	<%order_items=OrderItem.where(order_id:id)%>
        	<% order_items.each do |order_item| %>
        	<%=Product.find(order_item.product_id).name%>
        	<%end%>
        	<%end%>
        </td>	
        <td><%=customer.created_at%>
        <td>
        	<%if !id.nil?%>
        	<%=Order.find(id).subtotal%>
        	<%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Paypal orders</h1>
<table>
  <thead>
    <tr>
      <th>Customer Name</th>
    <!--  <th>phone</th>
      <th>Email</th>
      <th colspan="3">Delivery Address</th>-->
      <th>orders</th>
      <th>Time</th>
      <th>subtotal</th>
      <th>Payment Status</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.first_name %></td>
        
        <%id=transaction.order_id%>
        <td>
          <%if !id.nil?%>
          <%order_items=OrderItem.where(order_id:id)%>
          <% order_items.each do |order_item| %>
          <%=Product.find(order_item.product_id).name%>
          <%end%>
          <%end%>
        </td> 
        <td><%=transaction.created_at%>
        <td>
          <%if !id.nil?%>
          <%=Order.find(id).subtotal%>
          <%end%>
        </td>
        
        <td><%if transaction.id>=14%>
          <%=transaction.transaction_details.first.success%>
          <%end%>

        </td>
      </tr>

    <% end %>
  </tbody>
</table>