<div class="container">
<div class="row">
<% @products.each do |product| %>
<div class="col-md-4">
	<%= image_tag product.image.url if product.image? %>
	<h3><%= product.name %></h3>
	<p><%= product.description %></p>
	<p><%=product.price%></p>
	<%= link_to "View details", main_path(:id=>product.id)%>
</div>
<% end %>
</div>
</div>